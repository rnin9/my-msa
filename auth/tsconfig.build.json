{
  "extends": "./tsconfig.json",
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"],
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "@users/*": ["features/users/*"],
      "@tokens/*": ["features/tokens/*"],
      "@auth/*": ["features/auth/*"],
      "@shared/*": ["shared/*"]
    }
  }
}
